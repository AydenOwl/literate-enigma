{
    "id": "com.synvance.imagebutton",
    "version": "1.0.0",
    "name": "Image button",
    "description": "A button with an image",
    "newInstancePrefix": "ImageButton",
    "icon": "https://aydenowl.github.io/literate-enigma/icon.png",
    "vendor": "Synvance",
    "eula": "EULA",
    "license": "1.0",
    "webcomponents": [
        {
            "kind": "main",
            "tag": "com-synvance-imagebutton",
            "url": "https://aydenowl.github.io/literate-enigma/image_button/image_button.js",
            "integrity": "",
            "ignoreIntegrity": true
        },
        {
            "kind": "styling",
            "tag": "com-synvance-imagebutton-sps",
            "url": "https://aydenowl.github.io/literate-enigma/image_button/image_button_sps.js",
            "integrity": "",
            "ignoreIntegrity": true
        }
    ],
    "properties": {
        "textColor": {
            "type": "string",
            "description": "Text Color value",
            "default": "#000000"
        },
        "backgroundColor": {
            "type": "string",
            "description": "Background color value",
            "default": "#dec087"
        },
        "tooltip": {
            "type": "string",
            "description": "Button tooltip",
            "default": ""
        },
        "width": {
            "type": "integer",
            "default": 100
        },
        "height": {
            "type": "integer",
            "default": 100
        }
    },
    "methods": {
        "setBackgroundColor": {
            "description": "Sets the background color.",
            "parameters": [
                {
                    "name": "newColor",
                    "type": "string",
                    "description": "Background color value"
                }
            ],
            "body": "this.backgroundColor = newColor;"
        },
        "setTextColor": {
            "description": "Sets the text color.",
            "parameters": [
                {
                    "name": "newColor",
                    "type": "string",
                    "description": "Text color value"
                }
            ],
            "body": "this.textColor = newColor;"
        },
        "setTooltip": {
            "description": "Sets the tooltip's text.",
            "parameters": [
                {
                    "name": "newText",
                    "type": "string",
                    "description": "Tooltip's text"
                }
            ],
            "body": "this.tooltip = newText;"
        },
        "getBackgroundColor": {
            "returnType": "string",
            "description": "Returns the background color.",
            "body": "return this.backgroundColor;"
        },
        "getTextColor": {
            "returnType": "string",
            "description": "Returns the text color.",
            "body": "return this.textColor;"
        },
        "getTooltip": {
            "returnType": "string",
            "description": "Returns the tooltip's text.",
            "body": "return this.tooltip;"
        }
    },
    "events": {
        "onClick": {
            "description": "Called when the user clicks the button."
        }
    }
}